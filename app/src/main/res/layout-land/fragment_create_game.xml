<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutNewGame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="3"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:useDefaultMargins="false"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/labelPhase10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:text="@string/label_phase_10"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="32sp"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/labelHowManyPlayers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center_vertical"
            android:layout_row="1"
            android:text="@string/how_many_players_label"
            android:textSize="24sp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/labelMinPlayers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:enabled="false"
            android:text="2"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            android:layout_gravity="center_vertical" />

        <SeekBar
            android:id="@+id/seekNumPlayers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="20dp"
            android:layout_row="2"
            android:max="6"
            android:progress="3"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/labelMaxPlayers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:enabled="false"
            android:text="8"
            android:textSize="24sp"
            tools:ignore="HardcodedText"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:id="@+id/textNumPlayers"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_column="1"
        android:layout_gravity="fill_vertical|center_horizontal"
        android:layout_row="3"
        android:text="4"
        android:textSize="32sp"
        tools:ignore="HardcodedText"
        android:layout_weight="1" />

    <Button
        android:id="@+id/buttonStartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="4"
        android:text="@string/start_game_button"
        android:textSize="32sp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
