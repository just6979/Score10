<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:context=".MainActivity"
            android:columnCount="3"
            android:rowCount="5"
            android:id="@+id/layoutGame"
            android:alignmentMode="alignBounds"
            android:useDefaultMargins="true">

    <TextView
            android:text="@string/current_num_players_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textNumPlayers"
            android:textSize="24sp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="center_horizontal"
            android:layout_columnSpan="3"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="4"
            android:id="@+id/textNewNumPlayers"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:textSize="32sp"
            android:layout_marginBottom="70sp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_game"
            android:id="@+id/buttonEndGame"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal|center_horizontal"
            android:textSize="32sp"
            />

</GridLayout>
