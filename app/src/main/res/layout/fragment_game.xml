<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutGame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="4"
    android:orientation="horizontal"
    android:useDefaultMargins="true"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_phase_10"
        android:id="@+id/labelPhase10"
        android:layout_row="0"
        android:layout_columnSpan="4"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/labelGameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_game_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_columnSpan="2"
        android:layout_gravity="center_vertical|right"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textGameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GameName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textNumPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_num_players_label"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_vertical|right"
        android:layout_columnSpan="2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/textNewNumPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="left|center_vertical"
        android:layout_columnSpan="2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/buttonEndGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:layout_gravity="fill_horizontal|bottom"
        android:text="@string/end_game"
        android:textSize="32sp"
        android:layout_row="3" />

</GridLayout>
